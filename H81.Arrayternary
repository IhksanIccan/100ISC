package H81;

public class H81 {
    
    public static void main(String[] args) {
        
        int[] angka = new int[5];
        
        for (int i = 0; i < angka.length; i++) {
            angka[i] = (i % 2 == 0) ? i : -i;
        }
        
        System.out.println("Isi array :");
        for (int no : angka) {
            System.out.println(no);
        }
    }
}
