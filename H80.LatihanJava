package Day80;

import java.util.Scanner;

public class Day80 {
    public static void main(String[] args) {
        Scanner can = new Scanner(System.in);

        System.out.print("Masukkan bilangan bulat : ");
        int bilangan = can.nextInt();

        if (bilangan % 2 == 0) {
            
            bilangan += 3;
        } else {
            bilangan += 2;
        }

        System.out.println("Hasil setelah penambahan : " + bilangan);
    }
}

